From d6cb8c2c05b31ca00fa4b7353f309d27dc649352 Mon Sep 17 00:00:00 2001
From: "freedom.tan" <freedom.tan@mediatek.com>
Date: Wed, 27 Jan 2016 15:56:01 +0800
Subject: [PATCH 5/7] add 4 thermal zones for MT8173

---
 arch/arm64/boot/dts/mediatek/mt8173.dtsi | 95 ++++++++++++++++++++++++++++++--
 1 file changed, 91 insertions(+), 4 deletions(-)

diff --git a/arch/arm64/boot/dts/mediatek/mt8173.dtsi b/arch/arm64/boot/dts/mediatek/mt8173.dtsi
index 6e3300a..39e648e 100644
--- a/arch/arm64/boot/dts/mediatek/mt8173.dtsi
+++ b/arch/arm64/boot/dts/mediatek/mt8173.dtsi
@@ -256,12 +256,12 @@
 	};
 
 	thermal-zones {
-		cpu_thermal: cpu_thermal {
+		cpu_thermal0: cpu_thermal0 {
 			polling-delay-passive = <1000>; /* milliseconds */
 			polling-delay = <1000>; /* milliseconds */
 
-			thermal-sensors = <&thermal>;
-			sustainable-power = <1500>; /* milliwatts */
+			thermal-sensors = <&thermal 0>;
+			sustainable-power = <500>; /* milliwatts */
 
 			trips {
 				threshold: trip-point@0 {
@@ -289,13 +289,100 @@
 					cooling-device = <&cpu0 0 0>;
 					contribution = <1024>;
 				};
+			};
+		};
+
+		cpu_thermal1: cpu_thermal1 {
+			polling-delay-passive = <1000>; /* milliseconds */
+			polling-delay = <1000>; /* milliseconds */
+
+			thermal-sensors = <&thermal 1>;
+			sustainable-power = <1500>; /* milliwatts */
+
+			trips {
+				threshold1: trip-point@0 {
+					temperature = <68000>;
+					hysteresis = <2000>;
+					type = "passive";
+				};
+
+				target1: trip-point@1 {
+					temperature = <85000>;
+					hysteresis = <2000>;
+					type = "passive";
+				};
+
+				cpu_crit1: cpu_crit@0 {
+					temperature = <115000>;
+					hysteresis = <2000>;
+					type = "critical";
+				};
+			};
+		};
+
+		cpu_thermal2: cpu_thermal2 {
+			polling-delay-passive = <1000>; /* milliseconds */
+			polling-delay = <1000>; /* milliseconds */
+
+			thermal-sensors = <&thermal 2>;
+			sustainable-power = <1500>; /* milliwatts */
+
+			trips {
+				threshold2: trip-point@0 {
+					temperature = <68000>;
+					hysteresis = <2000>;
+					type = "passive";
+				};
+
+				target2: trip-point@1 {
+					temperature = <85000>;
+					hysteresis = <2000>;
+					type = "passive";
+				};
+
+				cpu_crit2: cpu_crit@0 {
+					temperature = <115000>;
+					hysteresis = <2000>;
+					type = "critical";
+				};
+			};
+
+			cooling-maps {
 				map@1 {
-					trip = <&target>;
+					trip = <&target2>;
 					cooling-device = <&cpu2 0 0>;
 					contribution = <2048>;
 				};
 			};
 		};
+
+		cpu_thermal3: cpu_thermal3 {
+			polling-delay-passive = <1000>; /* milliseconds */
+			polling-delay = <1000>; /* milliseconds */
+
+			thermal-sensors = <&thermal 3>;
+			sustainable-power = <1500>; /* milliwatts */
+
+			trips {
+				threshold3: trip-point@0 {
+					temperature = <68000>;
+					hysteresis = <2000>;
+					type = "passive";
+				};
+
+				target3: trip-point@1 {
+					temperature = <85000>;
+					hysteresis = <2000>;
+					type = "passive";
+				};
+
+				cpu_crit3: cpu_crit@0 {
+					temperature = <115000>;
+					hysteresis = <2000>;
+					type = "critical";
+				};
+			};
+		};
 	};
 
 	timer {
